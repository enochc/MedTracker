<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.maxvonamos.medtracker.app.MedTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedTracker">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MedTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Support deep links for app navigation -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="medtracker" />
            </intent-filter>
        </activity>

        <!-- Transparent activity for widget "Take" action â€” no main app behind it -->
        <activity
            android:name=".TakeMedicationActivity"
            android:exported="false"
            android:theme="@style/Theme.MedTracker.Transparent"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:launchMode="singleInstance" />

        <!-- Widget Configuration Activity -->
        <activity
            android:name=".widget.WidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.MedTracker">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Widget Receiver -->
        <receiver
            android:name=".widget.MedTrackerWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.maxvonamos.medtracker.app.ACTION_WIDGET_PINNED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/med_tracker_widget_info" />
        </receiver>

    </application>

</manifest>
